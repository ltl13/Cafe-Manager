<Window x:Class="CafeManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CafeManager"
        mc:Ignorable="d"
        Title="Login" Height="212.4" Width="330.899">
    <Grid>
        <TextBox x:Name="tbxUsername"
                 Height="25" Width="200"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="104,26,0,0"
                 FontSize="13"/>
        <PasswordBox x:Name="pwbPassword"
                     Height="25" Width="200"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Margin="103,76,0,0"
                     FontSize="13"/>
        <TextBlock x:Name="tblUsername"
                   TextWrapping="Wrap"
                   Text="Username"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="20,26,0,0"
                   FontSize="15"/>
        <TextBlock x:Name="tblPassword"
                   TextWrapping="Wrap"
                   Text="Password"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="20,76,0,0"
                   FontSize="15"/>
        <Button x:Name="btnLogin"
                Content="Login"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="20"
                Height="30"
                Width="80" Margin="103,124,0,0"
                Click="btnLogin_Click"/>
    </Grid>
</Window>
